{
  "LoggingApi": true,
  "LoggingRequest": true,
  "LoggingRequestAdvanced": false,
  "LoggingResponse": true,
  "LoggingResponseAdvanced": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      //"Http": {
      //  "Url": "http://localhost:5000"
      //},
      "Https": {
        "Url": "https://localhost:5001"
        //"Certificate": {
        //  "Path": "C:\\temp\\cert.pfx",
        //  "Password": "MyPassword",
        //  "AllowInvalid": true
        //}
      }
    }
  },
  "Jwt": {
    "Key": "7OmFLKYwvrAyGpuyXdgTTZsoGPDqcDrFUPsiV3Ot", //Generate random String from https://www.random.org/strings
    "Issuer": "http://localhost:4200/", //Project Property-> Debug-> IIS-->App URL (you can local host url as well)
    "Audience": "http://localhost:4200/"
  },
  "Salt": "7O123KYwvrAyGpudfdgTTZsoGPDqTKrFUPsiV3Ot",
  "ConnectionStrings": {
    "DefaultConnection": "data source=(localdb)\\mssqllocaldb;AttachDbFileName=%CONTENTROOTPATH%\\Useetattoo.mdf;Database=Useetattoo;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
        "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
        "Microsoft.AspNetCore.Mvc.StatusCodeResult": "Warning",
        "Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker": "Warning",
        "Microsoft.AspNetCore.Mvc.Infrastructure.ObjectResultExecutor": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Api-.log",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31, // Default max 31 Files...
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] <{SourceContext}> {Message} {NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] <{SourceContext}> {Message} {NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] <{SourceContext}> {Message} {NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Useetattoo"
    }
  }
}
